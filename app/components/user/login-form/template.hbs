<form {{action 'submit' on='submit'}} novalidate>

  <div class="form-group">
    <label for='email' class='form-control-label'>Email</label>
    {{input
      name='email'
      value=user.email
      type='email'
      id='email'
      class=(concat 'form-control'
        (if user.errors.email ' is-invalid'))}}
    {{#each user.errors.email as |error|}}
      <div class="invalid-feedback">{{error.message}}</div>
    {{/each}}
  </div><!-- /.form-group -->

  <div class="form-group">
    <label for='password' class='form-control-label'>Password</label>
    {{input
      name='password'
      value=user.password
      type='password'
      id='password'
      class=(concat 'form-control'
        (if user.errors.password ' is-invalid'))}}
    {{#each user.errors.password as |error|}}
      <div class="invalid-feedback">{{error.message}}</div>
    {{/each}}
  </div><!-- /.form-group -->

  {{#each user.errors.base as |error|}}
    <div class="form-group">
      {{input type="hidden"}}
      <p class="text-danger">{{error.message}}</p>
    </div><!-- /.form-group -->
  {{/each}}

  <button class="btn btn-primary" type="submit">Login</button>

</form>
